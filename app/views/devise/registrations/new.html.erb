<h2>Sign up</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { class: "form-horizontal"}) do |f| %>

  <%= f.error_notification %>

  <%= f.input :name, placeholder: 'John Smith' %>
  <%= f.input :email, placeholder: 'jsmith@gmail.com' %>
  <%= f.input :address, placeholder: "1709 Broderick Street", :input_html => {:class => "span5"} %>
  <%= f.input :city, placeholder: "San Francisco" %>
  <%= f.input :state, placeholder: "CA" %>
  <%= f.input :zipcode, placeholder: "94115" %>
  <%= f.input :phone, placeholder: '123-456-7890' %>
  <%= f.input :password, placeholder: '********' %>
  <%= f.input :password_confirmation, placeholder: '********' %>

  <div class="form-actions">
    <%= f.submit "Sign up", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
